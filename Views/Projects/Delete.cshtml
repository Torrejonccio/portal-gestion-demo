@model PortalGestionInterna.Models.Project

@{
    ViewData["Title"] = "Eliminar Proyecto";
}

<header class="page-header">
    <div>
        <h1 class="page-title text-danger">Eliminar Proyecto</h1>
        <p class="page-subtitle">Esta acción no se puede deshacer.</p>
    </div>
</header>

<div class="form-card">
    <h3 class="fw-normal">¿Estás seguro de que quieres eliminar permanentemente el proyecto "@Model.Name"?</h3>
    <hr />
    <dl class="row mt-4">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
    </dl>
    
    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sí, Eliminar Permanentemente" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-light">Cancelar</a>
    </form>
</div>
